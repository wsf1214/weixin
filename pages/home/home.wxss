@charset "UTF-8";
.banner {
  width: 100%;
  height: 350rpx; }
  .banner swiper {
    width: 100%;
    height: 100%; }
    .banner swiper swiper-item {
      width: 100%;
      height: 100%; }
      .banner swiper swiper-item image {
        width: 100%;
        height: 100%; }

.bannerBottom {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: "微软雅黑"; }
  .bannerBottom view {
    width: 25%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 37rpx; }
    .bannerBottom view image {
      width: 80rpx;
      height: 80rpx;
      margin: 20rpx 0; }

.pics {
  width: 100%;
  height: 320rpx;
  padding: 10rpx 0;
  background: #eee;
  overflow: hidden; }
  .pics image {
    width: 49.5%;
    float: left; }
  .pics .pic1 {
    height: 320rpx;
    margin-right: 7rpx; }
  .pics .pic2, .pics .pic3 {
    height: 157rpx; }
  .pics .pic2 {
    margin-bottom: 8rpx; }

.tips {
  width: 100%;
  box-sizing: border-box;
  border-left: 8rpx solid #f4ea2a;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-indent: 10rpx; }

.proList {
  width: 100%;
  background: #eee;
  padding-top: 1rpx; }
  .proList .proItem {
    width: 100%;
    height: 200rpx;
    margin: 5rpx 0;
    padding: 10rpx 0;
    background: #fff;
    display: flex; }
    .proList .proItem .proImg {
      width: 200rpx;
      height: 200rpx;
      margin: 0 20rpx; }
    .proList .proItem .proDetail {
      flex: 1;
      height: 200rpx; }
      .proList .proItem .proDetail .proName {
        width: 100%;
        height: 50rpx;
        display: flex;
        align-items: center; }
        .proList .proItem .proDetail .proName view {
          flex: 1;
          height: 30rpx;
          line-height: 30rpx;
          font-size: 27rpx;
          display: -webkit-box;
          overflow: hidden;
          white-space: normal !important;
          text-overflow: ellipsis;
          word-wrap: break-word;
          -webkit-line-clamp: 1;
          -webkit-box-orient: vertical; }
      .proList .proItem .proDetail .proInfo {
        width: 100%;
        height: 70rpx;
        margin-top: 20rpx;
        font-size: 25rpx;
        color: grey;
        word-spacing: 0;
        letter-spacing: 0; }
        .proList .proItem .proDetail .proInfo span {
          display: inline-block; }
        .proList .proItem .proDetail .proInfo .sPrice {
          font-size: 40rpx;
          color: #000;
          position: relative;
          top: 10rpx; }
          .proList .proItem .proDetail .proInfo .sPrice span {
            font-size: 30rpx; }
        .proList .proItem .proDetail .proInfo .bPrice {
          text-decoration: line-through;
          margin: 0 10rpx; }
        .proList .proItem .proDetail .proInfo .discount {
          color: #f66;
          font-size: 30rpx; }
      .proList .proItem .proDetail .proNum {
        width: 95%;
        height: 40rpx;
        color: grey;
        font-size: 25rpx;
        text-align: right; }
